{
  "name": "chingu-slack-clone",
  "version": "1.0.0",
  "scripts": {
    "precommit": "lint-staged",
    "dev":
      "concurrently \"bsb -clean-world -make-world -w\" \"nodemon server/index.js\"",
    "build": "bsb -clean-world -make-world && next build",
    "start": "NODE_ENV=production node server/index.js"
  },
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^1.3.4",
    "body-parser": "^1.18.2",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "graphql-tools": "^2.24.0",
    "next": "^5.1.0",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "reason-react": "^0.3.4"
  },
  "devDependencies": {
    "babel-plugin-bucklescript": "^0.2.4",
    "bs-platform": "^2.2.3",
    "concurrently": "^3.5.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "nodemon": "^1.17.3",
    "prettier": "^1.12.0"
  },
  "lint-staged": {
    "*.{js,json,css,md}": ["prettier --write", "git add"]
  },
  "nodemonConfig": {
    "watch": ["server/**/*.js"]
  }
}
